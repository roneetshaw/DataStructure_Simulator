<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ll"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LinkList_dr" >

    <ImageView
        android:id="@+id/imgarrow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgarrow2"
        android:src="@drawable/arrow"
        android:visibility="invisible" android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imgarrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgarrow1"
        android:layout_toLeftOf="@+id/LinkNode3"
        android:src="@drawable/arrow"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/LinkNode2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LinkNode1"
        android:layout_alignBottom="@+id/LinkNode1"
        android:layout_toLeftOf="@+id/imgarrow2"
        android:background="@drawable/edittext_rounded"
        android:gravity="center"
        android:height="@dimen/nodeTree"
        android:text="@string/txtBlank"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"
        android:width="@dimen/LinkNode" />

    <ImageView
        android:id="@+id/imgarrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LinkNode2"
        android:layout_marginBottom="12dp"
        android:layout_toLeftOf="@+id/LinkNode2"
        android:src="@drawable/arrow"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/LinkNode1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="182dp"
        android:layout_toLeftOf="@+id/imgarrow1"
        android:background="@drawable/edittext_rounded"
        android:gravity="center"
        android:height="@dimen/nodeTree"
        android:text="@string/txtBlank"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"
        android:width="@dimen/LinkNode" />

    <TextView
        android:id="@+id/LinkNode4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LinkNode3"
        android:layout_alignBottom="@+id/LinkNode3"
        android:layout_toRightOf="@+id/imgarrow3"
        android:background="@drawable/edittext_rounded"
        android:gravity="center"
        android:height="@dimen/nodeTree"
        android:text="@string/txtBlank"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"
        android:width="@dimen/LinkNode" />

    <ImageView
        android:id="@+id/imgarrow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgarrow3"
        android:layout_toRightOf="@+id/LinkNode4"
        android:src="@drawable/arrow"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/LinkNode5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LinkNode4"
        android:layout_alignBottom="@+id/LinkNode4"
        android:layout_toRightOf="@+id/imgarrow4"
        android:background="@drawable/edittext_rounded"
        android:gravity="center"
        android:height="@dimen/nodeTree"
        android:text="@string/txtBlank"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"
        android:width="@dimen/LinkNode" />

    <ImageView
        android:id="@+id/imgarrow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgarrow4"
        android:layout_toRightOf="@+id/LinkNode5"
        android:src="@drawable/arrow"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/LinkNode6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LinkNode5"
        android:layout_alignBottom="@+id/LinkNode5"
        android:layout_toRightOf="@+id/imgarrow5"
        android:background="@drawable/edittext_rounded"
        android:gravity="center"
        android:height="@dimen/nodeTree"
        android:text="@string/txtBlank"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"
        android:width="@dimen/LinkNode" />

    <ImageView
        android:id="@+id/imgarrowLeft5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgarrow1"
        android:layout_toLeftOf="@+id/LinkNode2"
        android:src="@drawable/arrowleft"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgarrowLeft2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgarrow4"
        android:layout_toLeftOf="@+id/LinkNode5"
        android:src="@drawable/arrowleft"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgarrowLeft1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgarrow4"
        android:layout_toRightOf="@+id/LinkNode5"
        android:src="@drawable/arrowleft"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgarrowLeft3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgarrow3"
        android:layout_alignTop="@+id/imgarrow3"
        android:src="@drawable/arrowleft"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgarrowLeft4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgarrow2"
        android:layout_toLeftOf="@+id/LinkNode3"
        android:src="@drawable/arrowleft"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/LinkNode3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LinkNode2"
        android:layout_alignBottom="@+id/LinkNode2"
        android:layout_toLeftOf="@+id/imgarrow3"
        android:background="@drawable/edittext_rounded"
        android:gravity="center"
        android:height="@dimen/nodeTree"
        android:text="@string/txtBlank"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"
        android:width="@dimen/LinkNode" />

    <TextView
        android:id="@+id/textlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imgarrow3"
        android:layout_marginRight="29dp"
        android:gravity="center"
        android:text="@string/btnLink" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textlink"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:gravity="center" >

        <Button
            android:id="@+id/btnLinkDocs"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="268dp"
            android:background="@drawable/custom_color"
            android:onClick="@string/btnDocs"
            android:padding="@dimen/btnStackControl"
            android:text="@string/btnDocs"
            android:width="@dimen/btnLinkList" />

        <Button
            android:id="@+id/btnLinkAdd"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="143dp"
            android:layout_toLeftOf="@+id/btnLinkDocs"
            android:background="@drawable/custom_color"
            android:onClick="@string/btnAdd"
            android:text="@string/btnAdd"
            android:width="80dp" />

        <Button
            android:id="@+id/btnLinkDel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="32dp"
            android:layout_toLeftOf="@+id/btnLinkReverse"
            android:background="@drawable/custom_color"
            android:onClick="@string/btnDelete"
            android:padding="@dimen/btnStackControl"
            android:text="@string/btnDelete"
            android:width="@dimen/btnLinkList" />

        <Button
            android:id="@+id/btnLinkClear"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@+id/btnLinkReverse"
            android:background="@drawable/custom_color"
            android:onClick="@string/btnClear"
            android:padding="@dimen/btnStackControl"
            android:text="@string/btnClear"
            android:width="@dimen/btnLinkList" />

        <Button
            android:id="@+id/btnLinkReverse"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnLinkDocs"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="108dp"
            android:background="@drawable/custom_color"
            android:onClick="@string/btnReverse"
            android:padding="@dimen/btnStackControl"
            android:text="@string/btnReverse"
            android:width="@dimen/btnLinkList" />
    </RelativeLayout>

</RelativeLayout>